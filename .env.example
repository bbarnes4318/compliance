# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000
ALLOWED_ORIGINS=http://localhost:3000,https://your-app-name.ondigitalocean.app

# Database Configuration (DigitalOcean Managed PostgreSQL)
DATABASE_URL=postgresql://username:password@your-db-host.db.ondigitalocean.com:25060/defaultdb?sslmode=require

# Redis Configuration (DigitalOcean Managed Redis)
REDIS_URL=rediss://default:password@your-redis-host.db.ondigitalocean.com:25061

# DigitalOcean Spaces Configuration
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_BUCKET=medicare-compliance-docs
DO_SPACES_ENDPOINT=nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3

# Security Keys (Generate strong keys!)
JWT_SECRET=generate-a-secure-256-bit-key-here
JWT_EXPIRY=24h
REFRESH_TOKEN_SECRET=generate-another-secure-256-bit-key
REFRESH_TOKEN_EXPIRY=7d
ENCRYPTION_KEY=generate-256-bit-hex-key-for-aes-encryption
ENCRYPTION_IV=generate-initialization-vector

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=Medicare Compliance System <compliance@example.com>

# Twilio Configuration (Optional - for call recording)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# OIG/GSA API Configuration (Optional)
OIG_API_KEY=your-oig-api-key
GSA_API_KEY=your-gsa-api-key

# ProviderTrust Configuration (Optional)
PROVIDERTRUST_API_KEY=your-providertrust-api-key
PROVIDERTRUST_API_URL=https://api.providertrust.com/v1

# Session Configuration
SESSION_SECRET=generate-a-session-secret

# Compliance Settings
RETENTION_YEARS=10
FWA_TRAINING_DAYS=90
ANNUAL_TRAINING_DAYS=365
SCREENING_FREQUENCY_DAYS=30
AUDIT_LOG_RETENTION_DAYS=3650

# Feature Flags
ENABLE_AI_MONITORING=true
ENABLE_REAL_TIME_ALERTS=true
ENABLE_AUTO_REMEDIATION=false
ENABLE_MULTI_LANGUAGE=true

# Compliance Officer Email
COMPLIANCE_OFFICER_EMAIL=compliance.officer@example.com
COMPLIANCE_TEAM_EMAILS=team1@example.com,team2@example.com

# Webhook URLs (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR/WEBHOOK/URL